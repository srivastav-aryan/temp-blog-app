<div class="row justify-content-center">
   <div class="col-md-8 text-center">
      <div class="error-container my-5">
         <h1 class="display-1 text-danger">Error</h1>
         <h2 class="mb-4"><%= message %></h2>

         <% if (process.env.NODE_ENV === 'development' && typeof error !==
         'undefined' && error && error.stack) { %>
         <div class="alert alert-danger mt-4">
            <details>
               <summary>Error Details (Development Only)</summary>
               <pre class="mt-3 text-start"><%= error.stack %></pre>
            </details>
         </div>
         <% } %>

         <div class="mt-5">
            <a href="/" class="btn btn-primary">Back to Home</a>
         </div>
      </div>
   </div>
</div>
